{
  "linters": {
    "phpSyntax": {
      "type": "php",
      "include": "(\\.php$)"
    },
    "phpcs": {
        "type": "phpcs",
        "include": "(^core/local/classes/.*\\.php$)",
        "phpcs.standard": "PSR2",
        "severity": {
            "PHPCS.W.Generic.Files.LineLength.TooLong": "advice"
        },
        "bin": ["./vendor/bin/phpcs"]
    },
    "json": {
      "type": "json",
      "include": [
        "(^\\.arcconfig$)",
        "(^\\.arclint$)",
        "(\\.json$)"
      ]
    },
    "merge-conflict": {
      "type": "merge-conflict"
    }
  }
}
