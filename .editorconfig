root=true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Set default charset
[**.{js,php,css}]
charset = utf-8

[core/local/**/assets-raw/scripts/**.es6]
indent_style = space
indent_size = 2

[core/local/**/assets-raw/styles/**.pcss]
indent_style = space
indent_size = 2

[package.json, gulpfile.babel.js, gulp/*.js]
indent_style = space
indent_size = 2

[**.php]
indent_style = space
indent_size = 4
